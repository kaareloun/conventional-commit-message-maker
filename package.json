{
  "name": "commit-helper",
  "version": "1.0.0",
  "description": "Commit helper is a cli tool for keeping your commit messages consistent. Based on Conventional Commits",
  "type": "module",
  "bin": {
    "commit-helper": "bin/index.cjs"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=bin/index.cjs --platform=node --format=cjs --minify --banner:js='#!/usr/bin/env node'",
    "dev": "npm run build -- --watch"
  },
  "author": "https://github.com/kaareloun",
  "license": "ISC",
  "dependencies": {
    "@clack/core": "^0.3.4",
    "@clack/prompts": "^0.7.0",
    "chalk": "^5.3.0",
    "execa": "^9.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "esbuild": "0.24.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
